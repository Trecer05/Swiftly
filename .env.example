##############################
# STORAGE PATHS
##############################

# Paths for storing chat data
USERS_STORAGE=./storage/chat/users
GROUPS_STORAGE=./storage/chat/groups
CHATS_STORAGE=./storage/chat/chats

# Paths for storing cloud data
USERS_CLOUD_STORAGE=./storage/cloud/users
TEAMS_CLOUD_STORAGE=./storage/cloud/teams


##############################
# TURN / STUN SERVERS
##############################

# TURN server configuration
TURN=turn:your-turn-server:3478?transport=tcp
TURN_USER=your_turn_username
TURN_PASSWORD=your_turn_password

# STUN servers (public defaults)
STUN1=stun:stun.l.google.com:19302
STUN2=stun:stun1.l.google.com:19302


##############################
# KAFKA
##############################

# Kafka address inside docker network
KAFKA_ADDRESS=kafka:9092


##############################
# DATABASE CONNECTION STRINGS
##############################

# Auth service DB
DB_AUTH_CONNECTION_STRING=postgresql://swift:swift@postgres_auth:5432/auth_db?sslmode=disable

# Chat service DB
DB_CHAT_CONNECTION_STRING=postgresql://swift:swift@postgres_chat:5432/chat_db?sslmode=disable

# Task service DB
DB_TASK_CONNECTION_STRING=postgresql://swift:swift@postgres_task:5432/task_db?sslmode=disable

# Cloud service DB
DB_CLOUD_CONNECTION_STRING=postgresql://swift:swift@postgres_cloud:5432/cloud_db?sslmode=disable


##############################
# SERVER PORTS
##############################

AUTH_SERVER_PORT=8081
CHAT_SERVER_PORT=8082
TASK_SERVER_PORT=8083
CLOUD_SERVER_PORT=8084


##############################
# LOGGING
##############################

LOG_LEVEL=info
LOG_TO_CONSOLE=true


##############################
# SECURITY / JWT
##############################

# IMPORTANT: replace with a strong unique secret in production
JWT_SECRET=change_me_in_production
